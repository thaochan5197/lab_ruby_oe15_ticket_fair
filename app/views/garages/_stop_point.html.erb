<!-- Danh sách điểm đỗ -->
<div class="boardingPointPanel" id="boardingPointPanel">
  <table>
    <tbody>
      <tr>
        <td width="50%" style="vertical-align: top">
          <div class="pointListHeader">ĐIỂM ĐÓN</div>
          <div class="boardingPointListContain pointListContain">
            <div class="provinceGroup">
              <div>
                <div style="padding-left: 0px;" class="tdProvinceName"><%= trip.city_start %></div>
                <div class="tdBoardingPointDetailItem">
                  <table>
                    <% stop_points.each do |sp| %>
                      <% if sp.types == 0 %>
                        <tr>
                          <td style="width: 250px; padding-left: 20px;" class="boardingPointNameTd">
                            <span class="boardingPointName" datatooltip=""><%= sp.bus_station.name %></span>
                          </td>
                          <td style="text-align: left;padding-left: 5px;" class="boardingPointTimeTd">
                            <span class="boardingPointTime"><%= sp.time_stop.strftime("%H:%M") %></span>
                          </td>
                        </tr>
                      <% end %>
                    <% end %>
                  </table>
                </div>
              </div>
            </div>
          </div>
        </td>
        <td style="vertical-align: top">
          <div class="pointListHeader">ĐIỂM TRẢ</div>
          <div class="boardingPointListContain pointListContain">
            <div class="provinceGroup">
              <div>
                <div style="padding-left: 0px;" class="tdProvinceName"><%= trip.city_finish %></div>
                <div class="tdBoardingPointDetailItem">
                  <table>
                    <% stop_points.each do |sp| %>
                      <% if sp.types == 1 %>
                        <tr>
                          <td style="width: 250px; padding-left: 20px;" class="boardingPointNameTd">
                            <span class="boardingPointName" datatooltip=""><%= sp.bus_station.name %></span>
                          </td>
                          <td style="text-align: left;padding-left: 5px;" class="boardingPointTimeTd">
                            <span class="boardingPointTime"><%= sp.time_stop.strftime("%H:%M") %></span>
                          </td>
                        </tr>
                      <% end %>
                    <% end %>
                  </table>
                </div>
              </div>
            </div>
          </div>
        </td>
      </tr>
    </tbody>
  </table>
</div>
