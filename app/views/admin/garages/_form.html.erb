<%= form_for [:admin, garage], html: {class: "form-horizontal form-label-left" } do |f| %>
  <div class="form-group">
    <%= f.label :name, class: "control-label col-md-3 col-sm-3 col-xs-12" %>
    <div class="col-md-6 col-sm-6 col-xs-12">
      <%= f.text_field :name, class: "form-control col-md-7 col-xs-12", required: "required" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :phone_number, class: "control-label col-md-3 col-sm-3 col-xs-12" %>
    <div class="col-md-6 col-sm-6 col-xs-12">
      <%= f.text_field :phone_number, class: "form-control col-md-7 col-xs-12", required: "required" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :address, class: "control-label col-md-3 col-sm-3 col-xs-12" %>
    <div class="col-md-6 col-sm-6 col-xs-12">
      <%= f.text_field :address, class: "form-control col-md-7 col-xs-12" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :info, class: "control-label col-md-3 col-sm-3 col-xs-12" %>
    <div class="col-md-6 col-sm-6 col-xs-12">
      <%= f.text_field :info, class: "form-control col-md-7 col-xs-12" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :image, class: "control-label col-md-3 col-sm-3 col-xs-12" %>
    <div class="col-md-6 col-sm-6 col-xs-12">
      <span class="picture">
        <%= f.file_field :image, accept: 'image/jpeg,image/gif,image/png' %>
      </span>
    </div>
  </div>
  <div class="ln_solid"></div>
  <div class="form-group">
    <div class="col-md-6 col-sm-6 col-xs-12 col-md-offset-3">
      <button class="btn btn-primary" type="reset">Reset</button>
      <%= f.submit yield(:button_text), class: "btn btn-success" %>
    </div>
  </div>
<% end %>
